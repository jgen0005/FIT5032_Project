@model _5032project_v3.Models.Appointment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("First Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayName("Last Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayName("Allocated Staff")
        </dt>

        <dd>
            @if (Model.StaffID == null)
            {
                <text>Waiting for Allocate</text>
            }
            else
            {
                @Html.DisplayFor(modelItem => Model.StaffID)
            }
        </dd>

        <dt>
            @Html.DisplayName("Date of Appointment")
        </dt>

        <dd>
            @Model.DateOfAppointment
        </dd>

        <dt>
            @Html.DisplayName("Appointment Time")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeSlot)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FeedbackRating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FeedbackRating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FeedbackComment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FeedbackComment)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AppointmentID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
